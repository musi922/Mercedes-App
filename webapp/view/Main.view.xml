<mvc:View xmlns:smarttable="sap.ui.comp.smarttable" xmlns:smartfilterbar="sap.ui.comp.smartfilterbar" xmlns:uxap="sap.uxap"
    controllerName="mercedsapp.controller.Main"
    	xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		height="100%">
		<f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<Title text="Manage Products" class="manageProduct"
/>
					</f:heading>
					
					<f:expandedContent>
						<Label text="View All Products"/>
					</f:expandedContent>
					<f:actions>
						<Button
								text="CART"
								type="Accept"
								class="sapUiLargePaddingBottom"
								press="OnNavigateToCart"/>
						<Button
								text="Delete"
								type="Transparent"/>
						<Button
								text="Copy"
								type="Transparent"/>
						<Button
								text="Toggle Footer"
								type="Transparent"
								press="onToggleFooter"/>
						<Button
								icon="sap-icon://action"
								type="Transparent"/>
						<Button
								text="Button with layoutData"
								type="Transparent"
								press="onPressOpenPopover">
							<layoutData>
								<OverflowToolbarLayoutData priority="AlwaysOverflow" closeOverflowOnInteraction="false" />
							</layoutData>
						</Button>
					</f:actions>
					<f:navigationActions>
						<Button
								icon="sap-icon://full-screen"
								type="Transparent" />
						<Button
								icon="sap-icon://decline"
								type="Transparent" />
					</f:navigationActions>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<layout:HorizontalLayout allowWrapping="true">
						<layout:VerticalLayout class="sapUiMediumMarginEnd">
							<ObjectAttribute title="Location" text="Warehouse A"/>
							<ObjectAttribute title="Halway" text="23L"/>
							<ObjectAttribute title="Rack" text="34"/>
						</layout:VerticalLayout>

						<layout:VerticalLayout>
							<ObjectAttribute title="Availability"/>
							<ObjectStatus text="In Stock" state="Success" />
						</layout:VerticalLayout>
					</layout:HorizontalLayout>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<Table id="idProductsTable"
				
						sticky="HeaderToolbar,ColumnHeaders"
						inset="false"
						items="{products>/Products}"
					   class="sapFDynamicPageAlignContent ProductsTable"
					   width="auto" growing="true" growingScrollToLoad="true" growingThreshold="20" mode="MultiSelect"
					   
					   >
					<headerToolbar>
						<Toolbar>
							<Title text="{=${products>/Products}.length>0?'Products (' + ${products>/Products}.length + ')' : 'Products' }" level="H2"/>
						</Toolbar>
					</headerToolbar>
					<columns>
					<Column >
					<Text text=""></Text>
					</Column>
						<Column>
							<Text text="Product ID" />
						</Column>
						<Column>
							<Text text="Name" />
						</Column>
						<Column>
							<Text text="Supplier" />
						</Column>
						<Column>
							<Text text="Category" />
						</Column>
						<Column>
							<Text text="Rating" />
						</Column>
						<Column>
							<Text text="Price" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onProductPress" class="columnList">
						<cells>
						<Image src="{products>productPicUrl}" width="6rem"/>
						<Text text="{products>ProductId}" />
						<VBox >
						<ObjectIdentifier title="{products>name}"/>
						<ObjectStatus text="{products>status}" state="{= ${products>status} === 'In Stock'?'Success':'Error'}"></ObjectStatus>
						</VBox>
                        <Text text="{products>supplierName}" />
                        <Text text="{products>category}" />
                        <RatingIndicator value="{products>rating}" maxValue="5" />
                        <Text text="$ {products>price}" />
						</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button type="Accept" text="Accept"/>
					<Button type="Reject" text="Reject"/>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
</mvc:View>